@model PatientInfoPortal.App.Models.EditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>View</h1>

<h4>Edit Patient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="PatientName" class="control-label"></label>
                <input asp-for="PatientName" class="form-control" />
                <span asp-validation-for="PatientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiseaseId" class="control-label"></label>
                <select asp-for="DiseaseId" class="form-control" asp-items="Model.Diseases"></select>
                <span asp-validation-for="DiseaseId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EpilepsyVal" class="control-label"></label>
                <select asp-for="EpilepsyVal" class="form-control" asp-items="Model.EpilepsyOptions"></select>
                <span asp-validation-for="EpilepsyVal" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NcdIds" class="control-label">Other NCDs</label>
                <div class="row">
                    <div class="col-md-5">
                        <select id="availableNcds" class="form-control" multiple="multiple">
                            @foreach (var ncd in Model.Ncds)
                            {
                                <option value="@ncd.Value">@ncd.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2 text-center">
                        <button type="button" id="addNcd" class="btn btn-primary btn-block">Add ></button>
                        <button type="button" id="removeNcd" class="btn btn-secondary btn-block">Remove</button>
                    </div>
                    <div class="col-md-5">
                        <select id="selectedNcds" class="form-control" asp-for="NcdIds" multiple="multiple" asp-items="Model.SelectedNcds"></select>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="AllergyIds" class="control-label">Allergies</label>
                <div class="row">
                    <div class="col-md-5">
                        <select id="availableAllergies" class="form-control" multiple="multiple">
                            @foreach (var allergy in Model.Allergies)
                            {
                                <option value="@allergy.Value">@allergy.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2 text-center">
                        <button type="button" id="addAllergy" class="btn btn-primary btn-block">Add ></button>
                        <button type="button" id="removeAllergy" class="btn btn-secondary btn-block">Remove</button>
                    </div>
                    <div class="col-md-5">
                        <select id="selectedAllergies" class="form-control" asp-for="AllergyIds" multiple="multiple" asp-items="Model.SelectedAllergies"></select>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            // NCDs
            $('#addNcd').click(function () {
                $('#availableNcds option:selected').each(function () {
                    $(this).remove().appendTo('#selectedNcds');
                });
            });

            $('#removeNcd').click(function () {
                $('#selectedNcds option:selected').each(function () {
                    $(this).remove().appendTo('#availableNcds');
                });
            });

            // Allergies
            $('#addAllergy').click(function () {
                $('#availableAllergies option:selected').each(function () {
                    $(this).remove().appendTo('#selectedAllergies');
                });
            });

            $('#removeAllergy').click(function () {
                $('#selectedAllergies option:selected').each(function () {
                    $(this).remove().appendTo('#availableAllergies');
                });
            });
        });
    </script>
}

